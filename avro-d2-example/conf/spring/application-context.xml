<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util.xsd">

  <context:annotation-config />

  <context:component-scan base-package="controllers" />

  <context:property-placeholder location="application.conf, avro-d2-plugin.properties" />

  <util:map id="avroIpcInterfaceMap" value-type="java.lang.Class">
    <entry key="example" value="controllers.protocols.Example" />
  </util:map>

  <util:map id="avroD2ProtocolMap" value-type="java.lang.Class">
    <entry key="example" value="controllers.protocols.Example" />
  </util:map>

</beans>
